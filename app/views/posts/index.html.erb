<h1>全ての投稿一覧</h1>
<h3><i class="glyphicon glyphicon-grain" style="color: #800000;"></i> <%= link_to '新しい投稿', new_post_path %></h3>
<table class="table table-hover">
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>

  <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><%= truncate post.text, length:15 %></td>
      <td><%= link_to '詳細', post %></td>
      <% if user_signed_in? %>
        <td><%= link_to '編集', edit_post_path(post) %></td>
        <td><%= link_to '削除', post_path(post),
                  method: :delete, data: { confirm: '削除しますか？' } %></td>
      <% end %>

    </tr>
  <% end %>
</table>
